<section id="Login-Container">
    <h1>
        Customer Login
    </h1>
    <form action="/user/login" method="POST">
        <div class="form-group">
            <input name="email" value="{{ loginValue }}" type="text" class="form-control" placeholder="name@example.com">
        </div>
        <div class="form-group">
            <input name="pw" value="{{ pwValue }}" type="password" class="form-control" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <p>{{ errorMsg }}</p>
    </form>
</section>
